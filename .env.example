# .env.example - Karma App Configuration
# Copy this file to .env and fill in your actual values.
# Do NOT commit the .env file to version control.

# --- Core Application Settings ---
IS_DEVELOP=true
FRONTEND_URL=http://localhost:3000
# A strong, randomly generated key for encrypting sensitive data like session strings.
# Generate with: python -c 'from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())'
ENCRYPTION_KEY=

# --- Database (PostgreSQL) ---
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/karma_app_dev
POSTGRES_PASSWORD=postgres

# --- Redis (Cache & Job Queue) ---
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379/0

# --- Celery (Asynchronous Worker) ---
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# --- Security & Authentication (JWT) ---
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=
REFRESH_TOKEN_SECRET_KEY=
SESSION_SECRET_KEY=

# --- Telegram API Credentials (from my.telegram.org) ---
TELETHON_API_ID=
TELETHON_API_HASH=

# --- LLM API Keys (choose one or more) ---
GEMINI_API_KEY=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GROQ_API_KEY=

# --- Centrifugo (Real-time WebSocket server) ---
CENTRIFUGO_API_KEY=
CENTRIFUGO_API_URL=http://centrifugo:8000/api
CENTRIFUGO_SECRET=

# --- S3-Compatible Storage (Optional) ---
S3_BUCKET_NAME=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
S3_ENDPOINT_URL=

# JWT
JWT_SECRET_KEY=test-secret-key-for-development

# Admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
# Test Docker image for Karma App Backend
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Create test user
RUN useradd -m testuser

# Install system dependencies including testing tools
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    wget \
    git \
    postgresql-client \
    redis-tools \
    && rm -rf /var/lib/apt/lists/*

# Upgrade pip
RUN pip install --upgrade pip

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install additional testing dependencies
RUN pip install --no-cache-dir \
    pytest==7.4.2 \
    pytest-asyncio==0.21.1 \
    pytest-html==4.0.2 \
    pytest-cov==4.1.0 \
    httpx==0.25.0 \
    faker==19.6.2 \
    factory-boy==3.3.0 \
    pytest-mock==3.11.1 \
    pytest-env==1.0.1

# Copy application code
COPY . .

# Create necessary directories
RUN mkdir -p /app/logs /app/test_results /app/sessions /app/tests

# Set up test database initialization
COPY test_data/ /app/test_data/ 2>/dev/null || true

# Make scripts executable and set ownership
RUN find /app -name "*.sh" -exec chmod +x {} \; || true
RUN chown -R testuser:testuser /app

# Switch to test user
USER testuser

# Environment variables for testing
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app
ENV TESTING=true
ENV LOG_LEVEL=DEBUG

# Health check for testing
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Default command (can be overridden)
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"] 